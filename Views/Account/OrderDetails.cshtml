@model ShoppingCart.Models.Order_Details
@using ShoppingCart.Controllers;
@{
    ViewBag.Title = "OrderDetails";
    int counter = 1;
    float sub_total = 0.0F;
    float total = 0.0F;
}
<h2>OrderDetails</h2>

    <p>
    </p>
    <hr />
    <div>
        <table>
            <tr>
                <th>Sr No</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Sub Total</th>
            </tr>
            @foreach (Item item in (List<Item>)Session["cart"])
            {
                <tr>
                    <td>@counter</td>
                    <td>@item.Product.ProductName</td>
                    <td>@item.Product.ProductPrice</td>
                    <td>@item.Quantity</td>
                    @{sub_total = (float)(item.Product.ProductPrice * item.Quantity);
                    }
                    <td>@sub_total</td>
                </tr>
                counter++;
                total = total + sub_total;
           }
            <tr><td>Total :</td> <td>@total</td> </tr>
        </table>
                     
    </div>
